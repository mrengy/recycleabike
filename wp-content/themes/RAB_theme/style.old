/*
Theme Name: RAB theme
Theme URI: http://www.recycleabike.org
Description: A custom theme for Recycle a Bike
Version: 1.0
Author: <a href="http://www.deeluxdesign.com">Deelux</a>
Tags:
*/

html, body, div, span, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, cite, em, font, img, strong, ol, ul, li, input, textarea {
	padding: 0;
	border: 0;
	margin: 0;
	outline: 0;
	font-size: 100%;
	vertical-align: baseline;
	background: transparent;
	list-style: none;
}

/*----------------------------------------------------------------- GENERAL */

body, html {
	background: #F7FCFD url(images/bg_1.gif) repeat;
	background-attachment: fixed;
	color: #333;
	font-family: nobile, helvetica, arial, serif;
	font-size: 14px;
	line-height: 20px;
	top: 0;
	left: 0;
}

h1, h2, h3, h4 {
	font-family: lobster, arial, serif;
	font-weight: 300;
	text-shadow: 0 2px 0 #FFF;
	/* font-style: italic; */
}

h2 { font-size: 48px; font-weight: normal; }
h3 { font-size: 48px; font-size: 48px; margin-bottom: 20px; }
h4 { font-size: 24px; margin-bottom: 10px; }

p { margin-bottom: 10px; line-height: 20px; }

a {
	color: #03C2D6;
	text-decoration: none;
	transition: all .2s;
		-webkit-transition: all .2s;
		-moz-transition: all .2s;
}

a:hover { text-decoration: underline; }

a:active { background-color: #D0ECF2; }

a img { border: none; }

.clear { clear: both; }

#wrapper { background: #F7FCFD url(images/bg.gif) repeat; }

#wrapper_container {
	width: 960px;
	padding: 0 20px 20px 20px;
	margin: 0 auto;
}

/*----------------------------------------------------------------- HEADER */

#header {
	width: 100%;
	height: 50px;
	border-bottom: 5px solid #D0ECF2;
	background: url(images/bg_1.gif) repeat;
	top: 0;
	position: relative;
	z-index: 10;
}

#header_container{
	width: 960px;
	padding: 0 20px 20px 20px;
	margin: 0 auto;
}

#header h1 { position: absolute; z-index: 20; }

#header h1 a {
	width: 130px;
	height: 100px;
	padding: 5px;
	margin: -5px 0 0 10px;
	background: #D0ECF2 url(images/rab_logo.png) no-repeat bottom center;
	display:block;
	float:left;
	box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
		-moz-box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
		-webkit-box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
}

#header h1 a span {
	width: 0;
	height: 0;
	display: block;
	overflow: hidden;
}

.menu {	float: right; }

.menu li { float: left; }

.menu a {
	height: 30px;
	padding: 16px 5px 4px 5px;
	margin-left: 5px;
	color: #03C2D6;
	font-size: 18px;
	line-height: 30px;
	letter-spacing: -1px;
	text-shadow: 0 2px 0 #FFF;
	display: block;
}

.menu a:hover {	background-color: rgba(69, 195, 213, 0.2); text-decoration: none; text-shadow: none; }

.menu a:active { background-color: rgba(69, 195, 213, 0.4); }

.menu .last_child a {
	padding-right: 23px;
	background: url(images/right_arrow.png) no-repeat 100% 60%;
	font-weight: bold;
	display: block;
}

.menu .last_child a:hover {
	background-color: rgba(69, 195, 213, 0.2);
}

.menu .last_child a:active { }

.buy {
	height: 30px;
	padding: 0 5px 0 5px;
	background-color: #03C2D6;
	margin: 13px 0 0 5px;
	color: #FFF;
	font-weight: bold;
	line-height: 32px;
	text-shadow: none;
	display: block;
	float: right;
	border-radius: 5px;
		-moz-border-radius: 5px;
		-webkit-border-radius: 5px;
	box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.3);
		-moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.3);
		-webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.3);
	opacity: 0.6;
		filter:alpha(opacity=60);
		-moz-opacity: 0.6;
}

.buy:hover {
	text-decoration: none;
	opacity: 1;
		filter:alpha(opacity=100);
		-moz-opacity: 1;
}

.buy:active { line-height: 35px; }

/*----------------------------------------------------------------- MAIN */

.main {
	height: 620px;
	padding: 5px 0 5px 0;
}

.main li {
	width: 475px;
	height: 300px;
	margin: 5px 0 5px 0;
	float: right;
}

.main li.build-a-bike {
	height: 610px;
	float: left;
}

.main li a {
	width: 100%;
	height: 100%;
	display: block;
	color: #333;
	text-decoration: none;
	position: relative;
}

.floater {
	width: 370px;
	padding: 5px 10px 10px 10px;
	background-color: #FFF;
	position: absolute;
	right: 0;
	bottom: 60px;
	z-index: 10;
	transition: all .3s;
		-webkit-transition: all .3s;
		-moz-transition: all .3s;
	box-shadow: -3px 0 5px rgba(0, 0, 0, 0.5);
		-moz-box-shadow: -3px 0 5px rgba(0, 0, 0, 0.5);
		-webkit-box-shadow: -3px 0 5px rgba(0, 0, 0, 0.5);
}

.floater:hover { background-color: #D0ECF2; }

.floater h3 { margin-bottom: 5px; font-size: 48px; line-height: 48px; }

.floater p { line-height: 15px; }

.main li.build-a-bike .floater {
	left: 0;
	box-shadow: 3px 0 5px rgba(0, 0, 0, 0.5);
		-moz-box-shadow: 3px 0 5px rgba(0, 0, 0, 0.5);
		-webkit-box-shadow: 3px 0 5px rgba(0, 0, 0, 0.5);
}

/*----------------------------------------------------------------- POSTS */

.post {
	padding: 20px 0 30px 0;
	border-top: 5px solid #D0ECF2;
	position: relative;
}

.post h3 { line-height: 50px; float: left; }

.post_nav {
	position: absolute;
	right: 0;
	bottom: 0;
}

.social_buttons {

}

.single .social_buttons {
	width: 600px;
	height: 20px;
	margin: -30px 0 20px 180px;
	position: static;
}

.social_buttons iframe {
	width: 80px;
	height: 20px;
	float: left;
}

.post img {
	border: 5px solid #D0ECF2;
	margin-left: 10px;
}

.content { }

.content p, .content ul, .content img { margin-bottom: 20px; }

.content li { margin-left: 40px; line-height: 20px; list-style: circle; }

#whats-new.post { padding: 20px 0 20px !important; }

#whats-new .newsletter {
	padding-right: 10px;
	float: left;
	position: relative;
}

#whats-new img {
	width: 220px;
	height: auto;
	margin-right: 20px;
	margin-left: 0;
	float: left;
}

#whats-new .content{
	width: 400px;
	margin-top: 15px;
	float:left;
}

#whats-new .content p { margin: 10px 0 0 0; }

#whats-new .social_buttons {
	left: 250px;
}

#whats-new h4 {
	margin-bottom: 20px;
	font-size: 36px;
}

#whats-new h4 a {
	color: #333;
	text-decoration: none;
	transition: all .2s;
		-webkit-transition: all .2s;
		-moz-transition: all .2s;
}

#whats-new h4 a:hover { color: #03C2D6; }

.read_more img {
	width: 20px !important;
	margin: 0 !important;
	border: none !important;
	float: none !important;
}

.special {
	width: 260px;
	/*min-height: 196px;*/
	padding: 10px;
	background: #F7FCFD url(images/bg_1.gif) repeat;
	border: 5px solid #D0ECF2;
	float: right;
	border-radius: 20px;
		-moz-border-radius: 20px;
		-webkit-border-radius: 20px;
}

.special h4 { color: #03C2D6; }

#single_page { width: 600px; padding-top: 40px; margin-right: 60px; float: left; }

#single_page .post { border: none; }

.sidebar { width: 280px; margin-top: 130px; float: left; }

.sidebar h4 { font-family: nobile, helvetica, arial, serif; font-size: 18px; font-weight: bold; }

.sidebar .item { margin-bottom: 20px; }

/*----------------------------------------------------------------- GALLERY */


.gallery-item {
	width: 130px !important;
	margin-right: 10px !important;
	margin-bottom: 0 !important;
	padding: 0 5px !important;
	float: left !important;
}

.gallery-item img {
	width: 130px !important;
	height: auto !important;
	margin: 0 !important;
	border: 5px solid #D0ECF2 !important;

}

#cboxTitle {
	display: none !important;
}

/*----------------------------------------------------------------- FOOTER */

#footer {
	width: 100%;
	border-top: 5px solid #D0ECF2;
	padding-bottom: 40px;
	background: url(images/bg_1.gif) repeat;
}

#footer_container {
	width: 960px;
	padding: 20px 20px 20px 20px;
	margin: 0 auto;
}

#footer_container .content { float: left; }

.footer_blurb {
	width: 450px;
	padding: 20px 0 20px 0;
	float:left;
}

.sponsor {
	margin: 0 20px 0 0;
	float: left;

}

.credit { margin-top: 20px; }

.social { margin-top: 20px; }

.social a {
	width: 40px;
	height: 40px;
	margin-right: 20px;
	display: block;
	float: left;
	box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
		-moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
		-webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
}

.social a span { width:0; height: 0; display: block; overflow: hidden; }

.social a:hover {
	box-shadow: 0 1px 5px rgba(0, 0, 0, 0.6);
		-moz-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.6);
		-webkit-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.6);
}

.facebook { background: url(images/facebook.png) no-repeat; }

.flickr { background: url(images/flickr.png) no-repeat; }

.youtube { background: url(images/youtube.png) no-repeat; }

.rss { background: url(images/rss.png) no-repeat; }

.twitter { background: url(images/twitter.png) no-repeat; }

/*----------------------------------------------------------------- INPUT */

.input_container{
	width: 470px;
	padding-top: 20px;
	margin-bottom: 20px;
	float: right;
	position: relative;
}

.input {
	width: 470px;
	height: 30px;
	border-top: 1px solid #999;
	border-bottom: 1px solid #FFF;
	margin: 0 0 10px 0;
	background-color: #FFF;
	position: relative;
	box-shadow: inset 1px 1px 3px rgba(0, 0, 0, 0.4);
		-moz-box-shadow: inset 1px 1px 3px rgba(0, 0, 0, 0.4);
		-webkit-box-shadow: inset 1px 1px 3px rgba(0, 0, 0, 0.4);
}

input {
	color: #333;
	padding-left: 10px;
	line-height: 30px;
}

.input input { width: 450px; }

.button {
	width: 100px;
	height: 30px;
	padding-right: 10px;
	padding-left: 10px;
	margin-left: 5px;
	margin-bottom: 20px;
	border-bottom: 1px solid #999;
	border-top: 1px solid #FFF;
	background-color: #03C2D6;
	color: #FFF;
	line-height: 30px;
	text-align: center;
	position: relative;
	cursor: pointer;
	display: block; float: right;
	box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
		-moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
		-webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
	border-radius: 5px;
		-moz-border-radius: 5px;
		-webkit-border-radius: 5px;
	transition: all .2s;
		-webkit-transition: all .2s;
		-moz-transition: all .2s;
}

.button:hover {	background-color: #D0ECF2; }

.button:active { margin-top: 3px; }

.button img { position: absolute; top: 5px; left: -30px; }

.wpcf7-submit {
	width: 100px !important;
	padding: 0;
	color: #FFF;
	font-size: 14px;
	line-height: 30px;
	text-align: center;
}


label {
	padding-left: 10px;
	color: #999;
	font-style: italic;
	line-height: 30px;
	position: absolute;
	top: 0;
	left: 0;
}

.mailchimp .input, .mailchimp input {
	width: 250px !important;
}

.mailchimp .button {
	width: 260px !important;
	margin: 0 !important;
}

.wpcf7-response-output {
	height: 20px;
	width: 330px;
	padding: 0 !important;
	border: none !important;
	margin: 0 !important;
	font-weight: bold;
	position: absolute !important;
	bottom: 30px !important;
	right: 130px !important;
}

.wpcf7-validation-errors { border:none; }

.wpcf7-not-valid-tip {
	width: 325px !important;
	height: 18px;
	border: none !important;
	background-color: rgba(255, 250, 196, 0.95) !important;
	line-height: 20px;
	text-shadow: none !important;
	top: -5px !important;
	left: 5px !important;
	right: 8px;
}

/*----------------------------------------------------------------- SLIDEDECK */


dt.active { color: #333 !important; }

/*----------------------------------------------------------------- COMMENTS */

.comments h3 { font-size: 24px; margin-bottom: 0; }

.dsq-global-toolbar-container { display: none !important; }

.alignleft {
	float: left;
	margin-right: 30px;
}

.alignright {
	float: right;
	margin-left: 30px;
}

.aligncenter {
	margin: 0 auto;
	display: block;
}

/*----------------------------------------------------------------- TEMP FUNDRAISING */

.overlay {
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.8);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 9999;
}

.modal {
	width: 800px;
	height: 520px;
	background-color: #FFF;
	border: 6px solid #FFF;
	margin: -263px 0 0 -403px;
	position: absolute;
	top: 40%;
	left: 50%;
	border-radius: 3px;
	box-shadow: 0 3px 8px rgba(0, 0, 0, 0.8);
}

.modal h3 {
	height: 70px;
	margin-left: 15px;
	color: #03C2D6;
	line-height: 70px;
	float: left;
}

.modal iframe {
	box-shadow: 0 0 0 1px #CCC;
}

.modal form {
	float: right;
}

.modal input {
	width: 220px;
	height: 40px;
	padding: 0;
	background-color: #03C2D6;
	margin: 12px 15px 0 0;
	color: #FFF;
	font-size: 18px;
	font-weight: bold;
	line-height: 40px;
	text-align: center;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
	display: block;
	cursor: pointer;
	border-radius: 5px;
	box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3), 0 3px 0 #1A8D9E;
	-webkit-transition: background .2s;
	-moz-transition: background .2s;
	transition: background .2s;
}

.modal input:hover {
	opacity: 0.8;
}

.modal input:active {
	margin-top: 15px;
	box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.opt-out {
	width: 100%;
	color: #CCC;
	font-size: 16px;
	font-weight: bold;
	text-align: center;
	text-shadow: 0 0 5px #000;
	display: block;
	position: absolute;
	bottom: -50px;
}

.opt-out:hover {
	color: #FFF;
}


